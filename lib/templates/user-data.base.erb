#cloud-config
disable_root: False
ssh_deletekeys: False
ssh_pwauth: True
users:
  - name: vagrant
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - <%= public_key.gsub(/\n/, "\\n") %>
      - ssh-rsa  vagrant insecure public key
<%- unless specific_node_config.nil? -%>
<%= specific_node_config %>
<%- end -%>
